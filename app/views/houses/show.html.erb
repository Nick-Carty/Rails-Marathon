<h3>  House Name: <%= @house.name %>  </h3>
<h3>  Author: <%= @house.author %>  </h3>
<h3>  Source: <%= @house.source %>  </h3>

<% if @house.motto != "" %>
  <h3>  House Motto: <%= @house.motto %>  </h3>
<% end %>

<% if @house.members != [] %>
  <h3>Members:</h3>
<% end %>

<ul>
  <% @members.each do |member| %>
    <li>
      <%= member.name %><br>
      <%= "Created at: #{member.created_at.strftime("%B %d %Y")}" %>
    </li>
<% end %>
</ul>

<%= link_to 'Add a House Member', new_house_member_path(@house) %><br>
<%= link_to 'Home', houses_path %>
